#set($title = "修改用户信息")
#set($layout = "/layout/schema.vm")

<div class="profile">
	<div class="container">
		<div class="avatar">
			<img class="img-circle" src="$base${profile.avater}" alt="">
		</div>
		<h2>$!{profile.name}</h2>
		<!--
		<a class="btn btn-white" href="#">Back</a>
		-->
	</div>
</div>

<nav id="profile-navigation" class="profile-navbar">
	<div class="container">
		<div class="content">
			<ul class="nav navbar-nav">
				<li class="active">
					<a href="profile">用户信息</a>
				</li>
				<li class="">
					<a href="password">登录密码</a>
				</li>
			</ul>
		</div>
	</div>
</nav>

<section class="site-main container">	
	<div class="site-content">
	    <div class="panel panel-default stacked">
	    	<div class="panel-heading"><span class="glyphicon glyphicon-user"></span> 修改用户信息</div>
	    	<div class="panel-body">
	    		<div id="message">
	    		#parse("/inc/action_message.vm")
	    		</div>
    			<div class="tab-pane active" id="profile">
    				<form id="pf" action="profile" method="post" class="form-horizontal">
    					<fieldset>
    						<div class="form-group">											
    							<label class="control-label col-lg-3" for="nickname">昵称</label>
    							<div class="col-lg-4">
    								<input type="text" class="form-control" name="name" value="$!{profile.name}" maxlength="18" data-required>
    							</div>		
    						</div>
    						<div class="form-group">											
    							<label class="control-label col-lg-3" for="email">邮箱地址</label>
    							<div class="col-lg-6">
    								<input type="text" class="form-control" name="email" value="$!{profile.email}" maxlength="64" data-required >
    							</div>		
    						</div>
    						<div class="form-group">
    							<div class="text-center">
    							<button type="submit" class="btn btn-primary">提交</button> 
    							</div>
    						</div><!-- /form-actions -->
    					</fieldset>
    				</form>
    			</div>
	    	</div><!-- /panel-content -->
	    </div><!-- /panel -->
	</div>
</div>
<script type="text/javascript">
$(function(){
	$('#pf').validate({
		onKeyup : true,
		onChange : true,
		eachValidField : function() {
			$(this).closest('div').removeClass('has-error').addClass('has-success');
		},
		eachInvalidField : function() {
			$(this).closest('div').removeClass('has-success').addClass('has-error');
		}
	});

})
</script>